class nv_form_link: nv_form_control {
	bool pressed;
	string url;
	nv_form_link(nv_form@parent, string caption, string url, string id = "", bool pressed = false) {
		super(caption, id, nv_form_ct_link, @parent);
		this.pressed = pressed;
		this.url = url;
	}
	bool monitor() { return this.pressed; }
	void fire() {
		this.pressed = true;
		urlopen(this.url);
		nv_form_control::fire();
	}
}
